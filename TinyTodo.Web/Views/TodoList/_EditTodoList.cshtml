<div class="modal fade" id="divEditTodoList" tabindex="-1" role="dialog" aria-labelledby="divEditTodoListLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="divEditTodoListLabel">New To-Do list</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="frmNewToDoList" method="post" action="/TodoList/Create">
            <div class="alert"></div>
            <p>Title: <input type="text" name="title"></p>
        </form>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="btnCreateTodoList" type="button" class="btn btn-primary">Add</button>
      </div>
    </div>
  </div>
</div>