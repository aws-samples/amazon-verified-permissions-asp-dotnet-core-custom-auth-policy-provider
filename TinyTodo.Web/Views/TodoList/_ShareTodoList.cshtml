<div class="modal fade" id="divShareTodoList" tabindex="-1" role="dialog" aria-labelledby="divShareTodoListLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="divShareTodoListLabel">Share To-Do List</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">        
        <form id="frmShareTodoList" method="post" action="/TodoList/Share">
            <div class="alert"></div>
            <p>Email: <input type="text" name="email"></p>
            <p>Allow Reshare?: <input type="checkbox" name="allowReshare"></p>
        </form>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="btnShareTodoList" type="button" class="btn btn-primary">Add</button>
      </div>
    </div>
  </div>
</div>